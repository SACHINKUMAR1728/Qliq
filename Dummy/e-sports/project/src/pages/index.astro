---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
import SidebarAd from '../components/SidebarAd.astro';
import { posts } from '../data/posts';
---

<Layout title="EsportsHub - Latest News & Updates">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2">
      <section class="mb-12">
        <h1 class="text-4xl font-orbitron font-bold text-white mb-2">Latest <span class="text-gaming-blue">Updates</span></h1>
        <p class="text-gray-400">Your source for the latest esports news and announcements</p>
      </section>

      <div class="grid grid-cols-1 gap-8">
        {posts.map(post => (
          <PostCard post={post} />
        ))}
      </div>
    </div>

    <aside class="lg:col-span-1">
      <SidebarAd />
    </aside>
  </div>
</Layout>